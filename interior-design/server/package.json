{
  "name": "interior-design-server",
  "version": "1.0.0",
  "description": "Backend server for Akmal Interior Design website",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "lint": "eslint .",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "generate-sitemap": "node scripts/generateSitemap.js",
    "db:backup": "node scripts/backupDatabase.js",
    "db:index": "node scripts/createIndexes.js",
    "audit": "npm audit --production",
    "security-check": "npm audit fix && snyk test",
    "prestart:production": "npm prune --production",
    "start:production": "NODE_ENV=production pm2 start ecosystem.config.js --env production",
    "stop:production": "pm2 stop ecosystem.config.js",
    "docker:build": "docker-compose build",
    "docker:start": "docker-compose up -d",
    "docker:stop": "docker-compose down"
  },
  "keywords": [
    "interior design",
    "nodejs",
    "express",
    "mongodb",
    "backend"
  ],
  "author": "Akmal Interior Design",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.3",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.10.1",
    "slugify": "^1.6.6",
    "winston": "^3.11.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
