NODE_ENV=production
PORT=5000
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Site Information
SITE_NAME=Akmal Interior Design
SITE_URL=https://akmalinteriors.com
SITE_DESCRIPTION=Pakistan's most distinguished interior design atelier, crafting environments of exceptional beauty and functionality.

# Client URL for CORS
CLIENT_URL=https://akmalinteriors.com

# File Upload
MAX_FILE_UPLOAD=5242880 # 5MB

# Admin credentials
ADMIN_EMAIL=admin@akmalinteriors.com
ADMIN_PASSWORD=strong_password_here

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_EMAIL=your-email@example.com
SMTP_PASSWORD=your-email-password
FROM_EMAIL=noreply@akmalinteriors.com
FROM_NAME=Akmal Interior Design

# Cron Job Schedule
SITEMAP_CRON=0 0 * * 0 # Weekly on Sunday at midnight
BACKUP_CRON=0 0 * * * # Daily at midnight
CACHE_CLEAR_CRON=0 */12 * * * # Every 12 hours

# Security
HELMET_CONTENT_SECURITY_POLICY=true

# Rate Limiting
RATE_LIMIT_WINDOW=15 # 15 minutes
RATE_LIMIT_MAX=100 # 100 requests per window 