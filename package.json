{
  "name": "akmal-interior-design",
  "version": "1.0.0",
  "description": "Backend API for Akmal Interior Design website",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --watchAll --verbose",
    "lint": "eslint .",
    "build-client": "cd client && npm install && npm run build",
    "start:production": "NODE_ENV=production node src/server.js",
    "deploy": "pm2 start ecosystem.config.js --env production",
    "stop": "pm2 stop akmal-interior-design",
    "restart": "pm2 restart akmal-interior-design",
    "logs": "pm2 logs akmal-interior-design",
    "status": "pm2 status akmal-interior-design",
    "monit": "pm2 monit",
    "postinstall": "[ -d './client' ] && npm run build-client || echo 'Skipping client build'"
  },
  "keywords": [
    "interior-design",
    "api",
    "backend",
    "express",
    "nodejs"
  ],
  "author": "Akmal Interior Design",
  "license": "ISC",
  "dependencies": {
    "@emotion/is-prop-valid": "^1.3.1",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-fileupload": "^1.5.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.10.0",
    "pm2": "^5.3.0",
    "slugify": "^1.6.6",
    "winston": "^3.12.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "nodemon": "^3.1.9"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
